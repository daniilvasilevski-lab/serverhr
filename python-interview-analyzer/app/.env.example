# === ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ===

# OpenAI API ключ (ОБЯЗАТЕЛЬНО!)
OPENAI_API_KEY=sk-your-openai-api-key-here

# === НАСТРОЙКИ ПРИЛОЖЕНИЯ ===

# Режим работы (development, production)
ENV=development

# Порт для запуска сервера
PORT=8000

# Хост для запуска
HOST=0.0.0.0

# === GOOGLE SERVICES (ОПЦИОНАЛЬНО) ===

# Путь к файлу с Google Service Account credentials
GOOGLE_SERVICE_ACCOUNT_KEY=/path/to/your/google-credentials.json

# ID Google Sheets для сохранения результатов (опционально)
RESULTS_SHEET_ID=your-google-sheet-id

# === НАСТРОЙКИ АНАЛИЗА ===

# Язык по умолчанию для анализа (ru, en, pl)
DEFAULT_LANGUAGE=ru

# Максимальный размер видео файла в MB
MAX_VIDEO_SIZE_MB=100

# Таймаут для скачивания видео в секундах
VIDEO_DOWNLOAD_TIMEOUT=300

# === НАСТРОЙКИ ЛОГИРОВАНИЯ ===

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Путь к файлу логов (опционально)
LOG_FILE=/var/log/interview-analyzer.log

# === БЕЗОПАСНОСТЬ ===

# Секретный ключ для JWT (если используется)
SECRET_KEY=your-secret-key-here

# Разрешенные origins для CORS (через запятую)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# === ПРОИЗВОДИТЕЛЬНОСТЬ ===

# Количество worker'ов для обработки
WORKERS=1

# Максимальное количество одновременных анализов
MAX_CONCURRENT_ANALYSES=2

# === РАСШИРЕННЫЕ НАСТРОЙКИ ===

# Модель Whisper для распознавания речи (tiny, base, small, medium, large)
WHISPER_MODEL=base

# Включить ли подробное логирование анализа (true/false)
DETAILED_ANALYSIS_LOGGING=false

# Временная директория для обработки файлов
TEMP_DIR=/tmp/interview-analyzer

# === МОНИТОРИНГ (ОПЦИОНАЛЬНО) ===

# Sentry DSN для отслеживания ошибок
SENTRY_DSN=your-sentry-dsn

# Включить ли метрики Prometheus (true/false)
ENABLE_METRICS=false

# === БАЗА ДАННЫХ (ЕСЛИ ИСПОЛЬЗУЕТСЯ) ===

# Database URL (опционально, для хранения результатов)
# DATABASE_URL=postgresql://user:password@localhost:5432/interview_analyzer

# === КЕШИРОВАНИЕ (ОПЦИОНАЛЬНО) ===

# Redis URL для кеширования результатов
# REDIS_URL=redis://localhost:6379/0

# Время жизни кеша в секундах
CACHE_TTL=3600
